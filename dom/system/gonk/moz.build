XPIDL_SOURCES += [
    'nsIAudioManager.idl',
    'nsISystemWorkerManager.idl',
]

XPIDL_MODULE = 'dom_system_gonk'

EXPORTS += [
    'AudioChannelManager.h',
    'GeolocationUtil.h',
    'SystemProperty.h',
    'SystemWorkerManager.h',
]

UNIFIED_SOURCES += [
    'AudioChannelManager.cpp',
    'AudioManager.cpp',
    'GeolocationUtil.cpp',
    'SystemProperty.cpp',
    'SystemWorkerManager.cpp',
]

EXPORTS += [
    'GonkGPSGeolocationProvider.h',
]
UNIFIED_SOURCES += [
    'GonkGPSGeolocationProvider.cpp',
]

XPCOM_MANIFESTS += [
    'components.conf',
]

EXTRA_JS_MODULES += [
    'systemlibs.js',
]

include('/ipc/chromium/chromium-config.mozbuild')

DEFINES['HAVE_ANDROID_OS'] = True

LOCAL_INCLUDES += [
    # libhardware_legacy is needed for acquiring/releasing wake lock
    '%' + '%s/hardware/libhardware_legacy/include' % CONFIG['GONK_PATH'],
    '/dom/base',
    '/dom/bluetooth/common',
]

DIRS += [
    'network',
    'volume',
]

if CONFIG['MOZ_WIDGET_TOOLKIT'] == 'gonk' and CONFIG['MOZ_B2G_RIL']:
    DIRS += [
        'radio',
    ]

FINAL_LIBRARY = 'xul'
